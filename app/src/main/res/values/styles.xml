<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CircularBarPagerStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_arc_max">100</item>
        <item name="arc_progress">20</item>

        <item name="progress_arc_clockwise_outline_color">#00C853</item>
        <item name="progress_arc_clockwise_color">#00C853</item>
        <item name="progress_arc_counter_clockwise_outline_color">#FFFFFF</item>
        <item name="progress_arc_counter_clockwise_color">#FFFFFF</item>

        <item name="progress_arc_clockwise_outline_width">0.75dp</item>
        <item name="progress_arc_counter_clockwise_outline_width">0.75dp</item>
        <item name="progress_arc_clockwise_width">8dp</item>
        <item name="progress_arc_counter_clockwise_width">8dp</item>

        <item name="progress_pager_on_click_enabled">true</item>

        <item name="progress_pager_fill_circle_color">@color/material_blue_grey_800</item>
    </style>

</resources>
